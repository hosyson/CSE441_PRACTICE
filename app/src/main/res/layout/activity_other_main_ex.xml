<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherMainExActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOtherExTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Enter parameters"
            android:textColor="#FB0202"
            android:textSize="30sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2">

            <TextView
                android:id="@+id/txtOtherExInputA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter A: "
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <EditText
                android:id="@+id/edtSendNumA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/txtOtherExInputB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter B:"
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <EditText
                android:id="@+id/edtSendNumB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/txtOtherExResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result:"
                android:textStyle="bold"
                app:layout_columnWeight="1" />

            <EditText
                android:id="@+id/edtReceiveResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btnAskForCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Result" />

        <Button
            android:id="@+id/btnReturnToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back To Main" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>